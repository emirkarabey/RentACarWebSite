@model RentACarWebSite.Models.Admin

@{
    ViewData["Title"] = "SignInAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SignInAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminMail" class="control-label"></label>
                <input asp-for="AdminMail" class="form-control" />
                <span asp-validation-for="AdminMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminPass" class="control-label"></label>
                <input asp-for="AdminPass" class="form-control" />
                <span asp-validation-for="AdminPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
