@model RentACarWebSite.Models.Admin

@{
    ViewData["Title"] = "SignInAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Sign.css" rel="stylesheet" />
<div id="login">
    <h3 class="text-center text-white pt-5">Sign In</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" asp-action="SignInAdmin" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="AdminMail" class="control-label"></label>
                            <input asp-for="AdminMail" class="form-control" />
                            <span asp-validation-for="AdminMail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AdminPass" class="control-label"></label>
                            <input asp-for="AdminPass" class="form-control" />
                            <span asp-validation-for="AdminPass" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Sign In" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

