@model RentACarWebSite.Models.Members
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


    <div class="row">
        <div class="col-md-4">
            <form asp-action="SignInMembers">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MemberMail" class="control-label"></label>
                    <input asp-for="MemberMail" class="form-control" />
                    <span asp-validation-for="MemberMail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MemberPass" class="control-label"></label>
                    <input asp-for="MemberPass" class="form-control" />
                    <span asp-validation-for="MemberPass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="SignIn" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
