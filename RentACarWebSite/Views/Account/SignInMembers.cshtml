@model RentACarWebSite.Models.Members
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<link href="~/css/Sign.css" rel="stylesheet" />
<div id="login">
    <h3 class="text-center text-white pt-5">Login form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" asp-action="SignInMembers">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="MemberMail" class="control-label"></label>
                            <input asp-for="MemberMail" class="form-control" />
                            <span asp-validation-for="MemberMail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MemberPass" class="control-label"></label>
                            <input asp-for="MemberPass" class="form-control" />
                            <span asp-validation-for="MemberPass" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Sign In" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


