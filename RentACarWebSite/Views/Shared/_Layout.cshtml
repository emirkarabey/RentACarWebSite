@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentACarWebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="assets/css/style.css">

</head>
<body style="background-color: #17a2b8">
    <header >
        <nav class="navbar-toggleable navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RentACarWebSite</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="CarsListNotSignIn">@localizer["Cars"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="SignUpMembers" style="position:absolute;right:339px">@localizer["SignUp"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-success" asp-area="" asp-controller="Account" asp-action="SignInMembers" style="position:absolute;right:168px">@localizer["SignInMem"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-info" asp-area="" asp-controller="Account" asp-action="SignInAdmin" style="position:absolute;right:20px">@localizer["SignInAdmin"]</a>
                        </li>
                        <li class="nav-link">
                            <partial name="_Culture" />
                        </li>

                    </ul>
                </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - RentACarWebSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
