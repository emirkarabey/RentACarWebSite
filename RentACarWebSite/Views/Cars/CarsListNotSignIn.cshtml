@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<RentACarWebSite.Models.Cars>

@{
    ViewData["Title"] = "CarsListNotSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<div class="form-group">
    <label>@localizer["Sirala"]</label>
    <form asp-controller="Cars" asp-action="Index" method="get">
        <select class="form-control" name="sirala" style="background-color: #ADD8E6 ">
            <option>@localizer["Seciniz"]</option>
            <option value="Azalan">@localizer["FiyatArtan"]</option>
            <option value="Artan">@localizer["FiyatAzalan"]</option>
        </select>
        <center><input style=" margin-left: auto; margin-right: auto;" class="btn btn-primary" type="submit" value=@localizer["SubmitBtn"]></center>
    </form>
</div>
<div class="row">

    <div class="col-2 card" style="width: 150px; height:600px; display: inline-block;">


        @await Component.InvokeAsync("MarkaList")



    </div>
    <div class="col-10" style="display:inline-block">


        @foreach (var item in Model)
        {
        <div class="card" style=" width: 25%; display: inline-block; box-shadow: 2px 2px 20px grey; margin: 2%; border-radius: 10px; height: auto; background-color: #ADD8E6">
            <img class="card-img-top" src=@Html.DisplayFor(modelItem => item.CarFoto)>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.CarModel)</h5>
                <p class="card-text">
                    @localizer["CarYear"]: @Html.DisplayFor(modelItem => item.CarYear)<br />
                    @localizer["CarColor"]: @Html.DisplayFor(modelItem => item.CarColor)
                </p>
                <a asp-controller="Account" asp-action="SignInMembers" class="btn btn-primary">@Html.DisplayFor(modelItem => item.Price) @localizer["RentNow"]</a>
            </div>
        </div>
        }
    </div>
</div>


